/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 通用样式 */
page {
  background-color: #f5f5f5;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

/* 按钮样式 */
.btn {
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border: none;
  color: white;
}

.btn-primary {
  background: linear-gradient(45deg, #4CAF50, #45a049);
}

.btn-secondary {
  background: linear-gradient(45deg, #2196F3, #1976D2);
}

.btn-danger {
  background: linear-gradient(45deg, #f44336, #d32f2f);
}

.btn-warning {
  background: linear-gradient(45deg, #ff9800, #f57c00);
}

.btn:active {
  transform: scale(0.98);
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.card-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 状态标签 */
.status-badge {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
  font-weight: bold;
}

.status-waiting {
  background: #ff9800;
}

.status-observing {
  background: #2196f3;
}

.status-recovering {
  background: #f44336;
}

.status-adopted {
  background: #4CAF50;
}

/* 角色标签 */
.role-badge {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: white;
}

.role-user {
  background: #2196f3;
}

.role-volunteer {
  background: #4caf50;
}

.role-admin {
  background: #ff9800;
}

.role-super_admin {
  background: #f44336;
}

/* 图标样式 */
.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.icon-small {
  width: 32rpx;
  height: 32rpx;
}

.icon-large {
  width: 60rpx;
  height: 60rpx;
}

/* 头像样式 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid #ddd;
}

.avatar-large {
  width: 120rpx;
  height: 120rpx;
}

.avatar-small {
  width: 60rpx;
  height: 60rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.loading-text {
  font-size: 28rpx;
  margin-top: 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  color: #999;
  text-align: center;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: #ccc;
}

/* 渐变背景 */
.gradient-bg {
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
}

.gradient-bg-blue {
  background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
}

.gradient-bg-orange {
  background: linear-gradient(135deg, #ff9800 0%, #f57c00 100%);
}

/* 阴影效果 */
.shadow-sm {
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.shadow-md {
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
}

.shadow-lg {
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.2);
}

/* 间距辅助类 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.ml-10 { margin-left: 10rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }

.pt-10 { padding-top: 10rpx; }
.pt-20 { padding-top: 20rpx; }
.pt-30 { padding-top: 30rpx; }
.pb-10 { padding-bottom: 10rpx; }
.pb-20 { padding-bottom: 20rpx; }
.pb-30 { padding-bottom: 30rpx; }
.pl-10 { padding-left: 10rpx; }
.pl-20 { padding-left: 20rpx; }
.pr-10 { padding-right: 10rpx; }
.pr-20 { padding-right: 20rpx; }

/* 文本颜色 */
.text-primary { color: #4CAF50; }
.text-secondary { color: #2196F3; }
.text-danger { color: #f44336; }
.text-warning { color: #ff9800; }
.text-success { color: #4CAF50; }
.text-muted { color: #999; }
.text-white { color: white; }

/* 文本大小 */
.text-xs { font-size: 20rpx; }
.text-sm { font-size: 24rpx; }
.text-base { font-size: 28rpx; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 36rpx; }
.text-2xl { font-size: 40rpx; }

/* 文本对齐 */
.text-left { text-align: left; }
.text-center { text-align: center; }
.text-right { text-align: right; }

/* 字体粗细 */
.font-normal { font-weight: normal; }
.font-bold { font-weight: bold; }

/* Flex布局辅助类 */
.flex { display: flex; }
.flex-col { flex-direction: column; }
.flex-row { flex-direction: row; }
.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }
.justify-around { justify-content: space-around; }
.items-center { align-items: center; }
.items-start { align-items: flex-start; }
.items-end { align-items: flex-end; }

/* 位置 */
.relative { position: relative; }
.absolute { position: absolute; }
.fixed { position: fixed; }

/* 显示/隐藏 */
.hidden { display: none; }
.block { display: block; }
.inline { display: inline; }
.inline-block { display: inline-block; }

/* 边框 */
.border { border: 1rpx solid #ddd; }
.border-t { border-top: 1rpx solid #ddd; }
.border-b { border-bottom: 1rpx solid #ddd; }
.border-l { border-left: 1rpx solid #ddd; }
.border-r { border-right: 1rpx solid #ddd; }

/* 圆角 */
.rounded { border-radius: 8rpx; }
.rounded-lg { border-radius: 16rpx; }
.rounded-full { border-radius: 50%; }

/* 宽度 */
.w-full { width: 100%; }
.w-auto { width: auto; }

/* 高度 */
.h-full { height: 100%; }
.h-auto { height: auto; }

/* 透明度 */
.opacity-50 { opacity: 0.5; }
.opacity-75 { opacity: 0.75; }

/* 过渡动画 */
.transition {
  transition: all 0.3s ease;
}

/* 悬停效果（在小程序中为点击效果） */
.hover-shadow:active {
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.15);
}

.hover-scale:active {
  transform: scale(0.98);
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeIn 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.slide-up {
  animation: slideUp 0.3s ease-out;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.spin {
  animation: spin 1s linear infinite;
}

/* 模态框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin: 40rpx;
  max-width: 600rpx;
  width: 90%;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
  border-radius: 50%;
  background: #f5f5f5;
}

.modal-body {
  margin-bottom: 30rpx;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

/* 列表样式 */
.list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.list-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  transition: background 0.2s;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background: #f5f5f5;
}

.list-item-content {
  flex: 1;
  margin-left: 20rpx;
}

.list-item-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.list-item-desc {
  font-size: 24rpx;
  color: #999;
}

.list-item-arrow {
  font-size: 24rpx;
  color: #ccc;
}

/* 表单样式 */
.form {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: bold;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #f9f9f9;
}

.form-input:focus {
  border-color: #4CAF50;
  background: white;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 24rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #f9f9f9;
  resize: vertical;
}

.form-textarea:focus {
  border-color: #4CAF50;
  background: white;
}

.form-select {
  width: 100%;
  padding: 24rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: white;
}

.form-help {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.form-error {
  font-size: 24rpx;
  color: #f44336;
  margin-top: 8rpx;
}

/* 网格布局 */
.grid {
  display: grid;
  gap: 20rpx;
}

.grid-2 {
  grid-template-columns: 1fr 1fr;
}

.grid-3 {
  grid-template-columns: 1fr 1fr 1fr;
}

.grid-4 {
  grid-template-columns: 1fr 1fr 1fr 1fr;
}

/* 进度条 */
.progress {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #45a049);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 徽章 */
.badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: bold;
  color: white;
  background: #f44336;
  min-width: 20rpx;
  text-align: center;
  line-height: 1;
}

.badge-primary {
  background: #4CAF50;
}

.badge-secondary {
  background: #2196F3;
}

.badge-warning {
  background: #ff9800;
}

.badge-danger {
  background: #f44336;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: #eee;
  margin: 30rpx 0;
}

.divider-text {
  position: relative;
  text-align: center;
  margin: 30rpx 0;
  color: #999;
  font-size: 24rpx;
}

.divider-text::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 1rpx;
  background: #eee;
  z-index: 1;
}

.divider-text text {
  background: #f5f5f5;
  padding: 0 20rpx;
  position: relative;
  z-index: 2;
}

/* 标签页 */
.tabs {
  display: flex;
  background: white;
  border-bottom: 1rpx solid #eee;
}

.tab {
  flex: 1;
  padding: 24rpx 16rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  border-bottom: 4rpx solid transparent;
  transition: all 0.3s;
}

.tab.active {
  color: #4CAF50;
  border-bottom-color: #4CAF50;
  font-weight: bold;
}

.tab-content {
  padding: 30rpx;
}

/* 底部安全区域 */
.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

/* 顶部安全区域 */
.safe-area-top {
  padding-top: env(safe-area-inset-top);
}

/* 响应式设计 */
@media (max-width: 600rpx) {
  .grid-4 {
    grid-template-columns: 1fr 1fr;
  }
  
  .grid-3 {
    grid-template-columns: 1fr 1fr;
  }
}