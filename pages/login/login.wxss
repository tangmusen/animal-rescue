/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  overflow: hidden;
}

/* 顶部装饰 */
.header-decoration {
  position: absolute;
  top: 0;
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}

.circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.1;
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  background: #ffffff;
  top: -100rpx;
  left: -50rpx;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  background: #ffffff;
  top: -150rpx;
  right: -100rpx;
}

.circle-3 {
  width: 150rpx;
  height: 150rpx;
  background: #ffffff;
  top: 50rpx;
  left: 50%;
  transform: translateX(-50%);
}

/* Logo 部分 */
.logo-section {
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  z-index: 1;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.logo-emoji {
  font-size: 80rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.app-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 登录部分 */
.login-section {
  width: 100%;
  padding: 0 40rpx;
  z-index: 1;
}

.login-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.card-desc {
  display: block;
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 30rpx;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s;
}

.wechat-btn {
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  color: #ffffff;
}

.wechat-btn:active {
  transform: scale(0.98);
}

.manual-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.manual-btn:active {
  transform: scale(0.98);
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
}

/* 分割线 */
.divider {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx 0;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: rgba(255, 255, 255, 0.3);
}

.divider-text {
  padding: 0 30rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

/* 头像选择 */
.avatar-section {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.avatar-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  padding: 0;
  background: transparent;
  border: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #667eea;
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  right: 0;
  background: #667eea;
  color: #ffffff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 昵称输入 */
.input-group {
  margin-bottom: 30rpx;
}

.nickname-input {
  width: 100%;
  height: 90rpx;
  padding: 0 30rpx;
  background: #f5f5f5;
  border-radius: 45rpx;
  font-size: 30rpx;
  text-align: center;
  box-sizing: border-box;
}

/* 快速测试登录 */
.test-login {
  margin-top: 20rpx;
  text-align: center;
}

.test-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  border-radius: 40rpx;
  color: #ffffff;
  font-size: 28rpx;
}

.test-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

/* 已登录状态 */
.user-section {
  width: 100%;
  padding: 0 40rpx;
  z-index: 1;
}

.user-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
}

.user-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
  border: 6rpx solid #4CAF50;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 30rpx;
}

.login-success {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 20rpx 40rpx;
  background: #e8f5e9;
  border-radius: 40rpx;
  margin-bottom: 40rpx;
}

.success-icon {
  font-size: 32rpx;
}

.success-text {
  font-size: 30rpx;
  color: #4CAF50;
  font-weight: 500;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 30rpx;
  width: 100%;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  background: #667eea;
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logout-btn {
  background: #ff6b6b;
}

/* 底部说明 */
.footer {
  position: absolute;
  bottom: 60rpx;
  text-align: center;
  z-index: 1;
}

.footer-text {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 10rpx;
}