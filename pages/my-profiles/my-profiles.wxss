/* pages/my-profiles/my-profiles.wxss */
.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header-stats {
  display: flex;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.stat-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.stat-item:not(:last-child)::after {
  content: "";
  position: absolute;
  right: 0;
  top: 10rpx;
  bottom: 10rpx;
  width: 1rpx;
  background: #eee;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #4CAF50;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.create-button {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(76, 175, 80, 0.3);
}

.create-icon {
  font-size: 40rpx;
  color: white;
  font-weight: bold;
  margin-right: 16rpx;
}

.create-text {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
}

.profiles-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.profile-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.profile-card {
  display: flex;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx;
  gap: 20rpx;
  transition: all 0.3s;
}

.profile-card:active {
  transform: scale(0.98);
  background: #f0f0f0;
}

.profile-image {
  position: relative;
  flex-shrink: 0;
}

.animal-photo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
}

.status-badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  font-size: 20rpx;
  color: white;
  padding: 6rpx 12rpx;
  border-radius: 10rpx;
  font-weight: bold;
}

.status-waiting {
  background: #ff9800;
}

.status-observing {
  background: #2196f3;
}

.status-recovering {
  background: #f44336;
}

.status-adopted {
  background: #4CAF50;
}

.profile-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.profile-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.profile-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.profile-id {
  font-size: 20rpx;
  color: #999;
  background: #eee;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
}

.profile-details {
  flex: 1;
  margin-bottom: 20rpx;
}

.detail-row {
  display: flex;
  margin-bottom: 8rpx;
  align-items: center;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 24rpx;
  color: #666;
  min-width: 120rpx;
}

.detail-value {
  font-size: 24rpx;
  color: #333;
}

.health-good {
  color: #4CAF50;
}

.health-fair {
  color: #ff9800;
}

.health-poor {
  color: #f44336;
}

.health-recovered {
  color: #4CAF50;
}

.profile-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 24rpx;
  border: none;
}

.edit-btn {
  background: #4CAF50;
  color: white;
}

.edit-btn:active {
  background: #45a049;
}

.delete-btn {
  background: #f44336;
  color: white;
}

.delete-btn:active {
  background: #d32f2f;
}

.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  display: block;
}

.empty-title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 40rpx;
}

.empty-btn {
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
}

.empty-btn:active {
  background: #45a049;
}

.loading-state {
  text-align: center;
  padding: 100rpx 40rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4CAF50;
  border-radius: 50%;
  margin: 0 auto 30rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  margin: 30rpx;
  overflow: hidden;
  min-width: 500rpx;
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-body {
  padding: 40rpx 30rpx;
  text-align: center;
}

.modal-text {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.modal-warning {
  font-size: 24rpx;
  color: #f44336;
}

.modal-actions {
  display: flex;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  border: none;
  background: white;
}

.cancel-btn {
  color: #666;
  border-right: 1rpx solid #eee;
}

.cancel-btn:active {
  background: #f5f5f5;
}

.confirm-btn {
  color: #f44336;
  font-weight: bold;
}

.confirm-btn:active {
  background: #fff5f5;
}