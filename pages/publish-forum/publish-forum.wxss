/* pages/publish-forum/publish-forum.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  padding-bottom: 120rpx;
}

/* 页面标题栏 */
.page-header {
  padding: 40rpx 30rpx;
  text-align: center;
}

.header-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 表单容器 */
.form-container {
  height: calc(100vh - 280rpx);
  padding: 0 20rpx;
}

/* 信息卡片 */
.info-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.header-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.card-subtitle {
  font-size: 24rpx;
  color: #999;
}

/* 表单组 */
.form-group {
  margin-bottom: 30rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.label-row {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.required {
  color: #ff4444;
  margin-left: 5rpx;
  font-size: 28rpx;
}

/* 输入框 */
.input-field {
  width: 100%;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.input-field:focus {
  background: white;
  border-color: #52c41a;
}

/* 文本域 */
.textarea-field {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.textarea-field:focus {
  background: white;
  border-color: #52c41a;
}

/* 帖子类型选择 */
.post-type-options {
  display: flex;
  gap: 20rpx;
}

.type-item {
  flex: 1;
  padding: 25rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  text-align: center;
  border: 3rpx solid transparent;
  transition: all 0.3s;
}

.type-item.active {
  background: #f6ffed;
  border-color: #52c41a;
}

.type-item.rescue.active {
  background: #fff1f0;
  border-color: #ff4d4f;
}

.type-emoji {
  display: block;
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.type-text {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.type-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.hint {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 图片上传 */
.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}

.upload-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  color: white;
  font-size: 28rpx;
  line-height: 1;
}

.add-btn {
  background: #f8f8f8;
  border: 2rpx dashed #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-content {
  text-align: center;
}

.add-icon {
  display: block;
  font-size: 48rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.add-text {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 位置选择 */
.location-input {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  min-height: 80rpx;
}

.location-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.location-placeholder {
  flex: 1;
  font-size: 28rpx;
  color: #999;
}

.location-icon {
  font-size: 28rpx;
  color: #999;
}

/* 紧急程度选项 */
.emergency-options {
  display: flex;
  gap: 20rpx;
}

.option-item {
  flex: 1;
  padding: 25rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  text-align: center;
  border: 3rpx solid transparent;
  transition: all 0.3s;
}

.option-item.active {
  background: #f6ffed;
  border-color: #52c41a;
}

.option-item.emergency.active {
  background: #fff5f5;
  border-color: #ff4444;
}

.option-emoji {
  display: block;
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.option-text {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.option-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 底部占位 */
.bottom-placeholder {
  height: 40rpx;
}

/* 底部按钮栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: white;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 20rpx;
  z-index: 100;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.btn-cancel {
  flex: 1;
  height: 90rpx;
  background: white;
  color: #666;
  border: 2rpx solid #ddd;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.btn-submit {
  flex: 2;
  height: 90rpx;
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: white;
  border: none;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.btn-submit.disabled {
  opacity: 0.5;
}