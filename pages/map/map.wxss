.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.filter-bar {
  background: white;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.filter-group {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.filter-label {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

.filter-options {
  display: flex;
  gap: 10rpx;
}

.filter-option {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  background: #f0f0f0;
  color: #666;
}

.filter-option.active {
  background: #4CAF50;
  color: white;
}

.view-toggle {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: #4CAF50;
  color: white;
  font-size: 24rpx;
}

.map {
  flex: 1;
}

.animal-list {
  flex: 1;
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.animal-item {
  display: flex;
  background: white;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.animal-emoji {
  font-size: 50rpx;
  margin-right: 20rpx;
}

.animal-info {
  flex: 1;
}

.animal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.animal-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.health-badge {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.health-healthy {
  background: #e8f5e8;
  color: #4CAF50;
}

.health-observe {
  background: #fff3e0;
  color: #ff9800;
}

.animal-location {
  font-size: 24rpx;
  color: #666;
}