/* pages/animal-detail/animal-detail.wxss */
.container {
  padding: 0 30rpx 120rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.photo-section {
  position: relative;
  margin: 30rpx 0;
}

.animal-photo {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
}

.photo-count {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(0,0,0,0.6);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.info-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.feature-item {
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.feature-text {
  margin-top: 8rpx;
  display: block;
}

.health-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 16rpx;
  margin-bottom: 30rpx;
}

.health-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.health-label {
  font-size: 28rpx;
  color: #333;
}

.health-value {
  font-size: 28rpx;
  color: #666;
}

.health-status, .adoption-status, .current-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: white;
  background: #4CAF50;
}

.medical-records, .medical-history, .rescue-reason, .adoption-requirements, .adopted-info {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.records-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
}

.record-item {
  margin-bottom: 12rpx;
}

.record-text, .history-text, .reason-text, .requirements-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.rescue-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.rescue-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.rescue-label {
  font-size: 28rpx;
  color: #333;
}

.rescue-value {
  font-size: 28rpx;
  color: #666;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
}

.personality-info {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.personality-item {
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.personality-label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.personality-value {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.adoption-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.adoption-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.adoption-label {
  font-size: 28rpx;
  color: #333;
}

.adopted-details {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.adopted-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.remarks-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 20rpx rgba(0,0,0,0.1);
}

.my-actions, .system-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
  font-weight: bold;
}

.edit-btn {
  background: #4CAF50;
  color: white;
}

.delete-btn {
  background: #f44336;
  color: white;
}

.contact-btn {
  background: #2196f3;
  color: white;
}

.adopt-btn {
  background: #ff9800;
  color: white;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: #f5f5f5;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4CAF50;
  border-radius: 50%;
  margin-bottom: 30rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  margin: 30rpx;
  overflow: hidden;
  min-width: 500rpx;
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-body {
  padding: 40rpx 30rpx;
  text-align: center;
}

.modal-text {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.modal-warning {
  font-size: 24rpx;
  color: #f44336;
}

.modal-actions {
  display: flex;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  border: none;
  background: white;
}

.cancel-btn {
  color: #666;
  border-right: 1rpx solid #eee;
}

.confirm-btn {
  color: #f44336;
  font-weight: bold;
}