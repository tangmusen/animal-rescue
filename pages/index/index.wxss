/* pages/index/index.wxss */
.container {
  width: 100%;
  height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 用户信息卡片 */
.user-card {
  width: 100%;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 25rpx;
}

.user-info {
  flex: 1;
}

.greeting {
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 12rpx;
}

.user-stats {
  display: flex;
  gap: 40rpx;
}

.stat-item {
  font-size: 28rpx;
  color: #666666;
}

/* AI智能识别动物卡片 */
.ai-card {
  width: 100%;
  background: #4CAF50;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.ai-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.ai-left {
  display: flex;
  align-items: center;
}

.ai-emoji {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.ai-text {
  display: flex;
  flex-direction: column;
}

.ai-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.ai-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.arrow-right {
  font-size: 36rpx;
  color: #ffffff;
}

/* 快捷功能入口 */
.quick-features {
  width: 100%;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.feature-icon-wrapper {
  width: 90rpx;
  height: 90rpx;
  background: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.feature-emoji {
  font-size: 40rpx;
}

.feature-name {
  font-size: 24rpx;
  color: #333333;
}

/* 紧急救助卡片 - 白色背景 */
.task-card {
  width: 100%;
  flex: 1;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 25rpx 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.header-left {
  display: flex;
  align-items: center;
}

.lightning-emoji {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}

.view-all {
  font-size: 26rpx;
  color: #999999;
}

.task-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.task-item {
  background: #f8f8f8;
  border-radius: 15rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.task-left {
  display: flex;
  flex-direction: column;
}

.task-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.task-time {
  font-size: 24rpx;
  color: #999999;
}

.task-right {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.progress-container {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.progress-bar {
  width: 120rpx;
  height: 4rpx;
  background: #e0e0e0;
  border-radius: 2rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #4CAF50;
  border-radius: 2rpx;
}

.progress-text {
  font-size: 22rpx;
  color: #333333;
  min-width: 40rpx;
}

.complete-btn {
  background: #4CAF50;
  color: #ffffff;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  border: none;
}

/* 最近档案卡片 */
.recent-card {
  width: 100%;
  flex: 1;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 25rpx 30rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.folder-emoji {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.green-text {
  color: #4CAF50;
}

.recent-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.recent-item {
  background: #f8f8f8;
  border-radius: 15rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.recent-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  overflow: hidden;
}

.recent-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.recent-desc {
  font-size: 24rpx;
  color: #999999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.enter-btn {
  background: #4CAF50;
  color: #ffffff;
  padding: 10rpx 12rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  border: none;
  white-space: nowrap;
}