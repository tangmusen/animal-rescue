/* pages/profile/profile.wxss */
page {
  height: 100%;
  background: #f5f5f5;
}

.page-container {
  height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.user-section {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  padding: 25rpx;
}

.user-main {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  border: 3rpx solid rgba(255,255,255,0.3);
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.user-level {
  font-size: 24rpx;
  opacity: 0.9;
}

.user-stats {
  display: flex;
  background: rgba(255,255,255,0.2);
  border-radius: 10rpx;
  padding: 15rpx;
}

.stat {
  flex: 1;
  text-align: center;
}

.stat-num {
  font-size: 30rpx;
  font-weight: bold;
}

.stat-text {
  font-size: 22rpx;
  margin-top: 4rpx;
  opacity: 0.9;
}

.view-activity {
  background: rgba(255,255,255,0.3);
  border-radius: 20rpx;
  padding: 10rpx;
  text-align: center;
  margin-top: 15rpx;
  font-size: 26rpx;
}

.badge-section {
  background: white;
  margin: 15rpx;
  border-radius: 12rpx;
  padding: 20rpx;
}

.badge-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.badge-list {
  display: flex;
  justify-content: space-between;
}

.badge {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.badge-text {
  font-size: 22rpx;
  color: #666;
  text-align: center;
}

.menu-section {
  background: white;
  margin: 0 15rpx 15rpx;
  border-radius: 12rpx;
  overflow: hidden;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.menu-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 25rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex: 1;
}

.menu-row:last-child {
  border-bottom: none;
}

.menu-row:active {
  background: #f5f5f5;
}

.menu-content {
  display: flex;
  align-items: center;
}

.menu-emoji {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.menu-name {
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  color: #ccc;
  font-size: 26rpx;
}